{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Data Manager - Backend (Uvicorn, robust)",
      "type": "debugpy",
      "python": "${workspaceFolder}/backend/.venv/bin/python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "--app-dir",
        "${workspaceFolder}/backend/src",
        "main:app",
        "--reload",
        "--host",
        "127.0.0.1",
        "--port",
        "8002"
      ],
      "console": "integratedTerminal",
      "justMyCode": true,
      "subProcess": true
    },
    {
      "name": "Data Manager - Frontend (Angular serve)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "start",
        "--",
        "--port",
        "4200",
        "--open",
        "false"
      ],
      "cwd": "${workspaceFolder}/frontend",
      "console": "integratedTerminal"
    },
  ],
  "compounds": [
    {
      "name": "DataManager Frontend + Backend",
      "configurations": [
        "Data Manager - Backend (Uvicorn, robust)",
        "Data Manager - Frontend (Angular serve)"
      ]
    }
  ]
}